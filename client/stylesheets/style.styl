@import url('http://fonts.googleapis.com/css?family=Roboto+Slab:700')
primary_color = #BADA55

// Mixins

container(bg_color)
  max-width 600px
  border-radius 5px
  padding 10px
  background-color bg_color
  box-shadow 0px 0px 5px rgba(0,0,0,60%)

// Abstract classes to extend

.inline-list
  list-style-type none

  li
    display inline-block

.menu-element
  display block
  padding 0.7em 1.2em
  background primary_color
  border 0
  box-shadow none
  color #fff
  font-size 1.1em
  margin-right -0.5em
  text-shadow 0 1px 1px rgba(0,0,0,0.1)
  text-decoration none
  border-radius 0
  transition all 0.05s
  &:focus, &:hover 
    background #999
  &:active 
    background #888
    box-shadow inset 0 1px 0 rgba(0,0,0,0.1)

.alert.error
  container lighten(red, 80%)
  color darken(red, 30%)

body
  color #222
  font-family "Trebuchet MS", "Helvetica", sans-serif
  font-size 14px
  padding: 0.8em
  margin 1em auto
  max-width 1200px 
h1,h2,h3
  font-family "Roboto Slab","Trebuchet MS"
h1 
  color primary_color
  font-size 1.5em
  -webkit-font-smoothing antialiased
  font-weight 700
h3
  color #444
  font-weight 700
  font-size 1.3em
  padding-left 0.2em
  margin 0.4em 0 0.4em
  -webkit-font-smoothing antialiased
nav
  margin-bottom 10px
  text-align right
  ul
    @extend .inline-list
  a
    @extend .menu-element
  li:first-child a 
    border-radius 1.5em 0 0 1.5em
  li:last-child a 
    border-radius 0 1.5em 1.5em 0

#login-dropdown-list
  container white
  position absolute
  margin-top 5px
  border 1px solid #ddd
  box-shadow 0 1px 1px rgba(0,0,0,0.3)
  padding 0.5em 1em
  .login-button
    cursor pointer
    height 19px
    margin 5px 0px
  .login-image
    float left
    width 16px
    height 16px
  .text-besides-image
      margin-left 5px

.talks
  .talk
    display inline-block
    vertical-align top
    margin 0.8em 1.5% 0
    max-width 30%
    & > div
      position relative
      background none
      box-shadow none
      padding 0
  .speaker 
    display block
    font-size 0.7em
    padding-top 0.3em
    font-weight normal
    font-style italic
    color #909090
  .vote
    cursor: pointer
    float none
    font-size 0.9em
    padding 0.3em 0.6em 0.3em 2em
    border-radius 1em
    background primary_color
    box-shadow inset 0 -1px 0 1px rgba(0,0,0,0.05)
    text-shadow 0 -1px 1px rgba(0,0,0,0.1)
    color #fff
    position absolute
    bottom 0.5em
    right 0.5em
    transition all 0.1s
    &:before 
      content "â–´"
      color #fff
      font-size 1.8em
      height 0.9em
      line-height 0.7em
      width 0.8em
      position absolute
      border-radius 1em
      top 0
      left 0
      text-align center
      padding 0 0.05em
      background rgba(0,0,0,0.1)
    &:hover:before 
      background rgba(0,0,0,0.2)

  .summary 
    padding 0.8em 0.8em 2.2em
    cursor pointer
    background #f1f1f1
    border-bottom 1px solid #ddd
    box-shadow none
    color #777
    max-width none
    font-size 1em
    font-family "georgia", "Times",serif
    line-height 1.2em
    -webkit-transition all 0.1s
    transition all 0.1s
    &:hover 
      background #f6f6f6
      color #555




form
  legend
    font 120% bold
    padding-bottom 10px

  .field
    margin-bottom 5px

    label
      display block
    input, textarea
      box-sizing border-box
      width 100%
    textarea
      height 150px

  .actions
    float none
    display block
    text-align right
    width 100%